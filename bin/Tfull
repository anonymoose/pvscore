#!/bin/bash

echo "FULL DB REFRESH..."
psql -U unittest -d unittest -f ./unittest-db/unittest.sql > /tmp/Tfull.log 2>&1
echo "... done"

rm -rf ./data/cache ./data/sessions #./data/templates/crm/*

nosetests -x -v --cover-package=pvscore.model --cover-package=pvscore.controllers --cover-package=pvscore.lib --cover-package=pvscore.config $*