#!/bin/bash

echo "FULL DB REFRESH..."
psql -U unittest -d unittest -f ./unittest-db/unittest.sql > /tmp/Tfull.log 2>&1
echo "... done"

rm -rf ./data/cache ./data/sessions #./data/templates/crm/*

nosetests -x -v --exclude-dir-file=unittest-exclude.txt --cover-package=app.model --cover-package=app.controllers --cover-package=app.lib --cover-package=app.config $*